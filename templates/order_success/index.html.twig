{% extends 'base.html.twig' %}

{% block title %}Confirmation de commande - La Cave aux Délices{% endblock %}

{% block content %}
<!-- Breadcrumb Section Start -->
<div class="section">
    <div class="breadcrumb-area bg-light">
        <div class="container-fluid">
            <div class="breadcrumb-content text-center">
                <h1 class="title">Confirmation de commande</h1>
                <ul>
                    <li>
                        <a href="/">Accueil </a>
                    </li>
                    <li>
                        <a href="{{ path('account') }}">Mon compte </a>
                    </li>
                    <li class="active">Confirmation de commande</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->

<div class="container">
    <p>
        Bonjour <strong>{{ order.user.firstname }} {{ order.user.lastname }}</strong>,<br/>
        Nous vous remercions pour votre commande n°<strong>{{ order.reference }}</strong><br/>
        Une confirmation vient de vous être envoyée par email à l'adresse <strong>{{ order.user.email }}</strong><br/>
    <hr>
    Votre commande sera livrée par <strong>{{ order.carrierName }}</strong> à l'adresse suivante : <br/>
    {{ order.delivery|raw }}
    <hr>

    Pour suivre votre commande, rendez-vous dans votre <a href="{{ path('account') }}">compte</a>
    </p><br/>
</div>
{% endblock %}

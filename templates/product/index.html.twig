{% extends 'base.html.twig' %}

{% block title %}Nos produits - La Cave aux Délices{% endblock %}

{% block content %}

<div class="section section-margin">
    <div class="container">
        <div class="row flex-row-reverse">
                <!------------------------- Shop Wrapper End ------------------------->
            <div class="col-lg-9 col-12 col-custom">
                <!-- Section Title Start -->
                <div class="section-title aos-init aos-animate" data-aos="fade-up" data-aos-delay="300">
                    <br><h2 class="title pb-3">Tous nos produits</h2>
                    <span></span>
                    <div class="title-border-bottom"></div>
                    <h5 class="mt-3 font-italic">Découvrez nos produits d’excellence !</h5>
                </div>
                <!-- Section Title End -->

                <!------------------------------ Shop Wrapper Start --------------------------->
                <div class="row shop_wrapper grid_3">

                    <!------------------------ Single Product Start --------------------->
                    {% for product in products %}
                        <div class="col-lg-4 col-md-4 col-sm-6 product" data-aos="fade-up" data-aos-delay="200">
                            {% include 'product/single_product.html.twig' %}
                        </div>
                    {% endfor %}
                    <!------------------------ Single Product End ------------------>
                </div>
                <div class="pagination mt-8">
                    {{ knp_pagination_render(products) }}
                </div>
            </div>

            {% include 'product/search.html.twig' %}

        </div>
    </div>
</div>

{% endblock %}

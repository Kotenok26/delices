{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - La Cave aux Délices{% endblock %}

{% block content %}

<!-- Breadcrumb Section Start -->
<div class="section">
    <div class="breadcrumb-area ">
        <div class="container-fluid">
            <div class="breadcrumb-content text-center">
                <h1 class="title">{{ product.brand }}</h1>
                <span></span>
                <div class="title-border-bottom"></div>
                <ul>
                    <li>
                        <a href="/">Accueil </a>
                    </li>
                    <li>
                        <a href="{{ path('products') }}">Produits </a>
                    </li>
{#                    <li class="active">{{ product.name }}</li>#}
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->


    <!-- Shop Section Start -->
    <div class="section section-margin">
        <div class="container">

            <div class="row">
                <div class="col-lg-5 offset-lg-0 col-md-8 offset-md-2 col-custom">

                    <!-- Product Details Image Start -->
                    <div class="product-details-img">

                        <!-- Single Product Image Start -->
                        <div class="single-product-img swiper-container gallery-top">
                            <div class="swiper-wrapper popup-gallery">
                                <a class="swiper-slide w-100">
                                    <img class="w-100" src="/uploads/{{ product.illustration }}" alt="{{ product.name }}">
                                </a>
                                <a class="swiper-slide w-100">
                                    <img class="w-100" src="/uploads/{{ product.illustration }}" alt="{{ product.name }}">
                                </a>
                            </div>

                        </div>
                        <!-- Single Product Image End -->

                        <!-- Single Product Thumb Start -->
                        <div class="single-product-thumb swiper-container gallery-thumbs">
                            <div class="swiper-wrapper">
                            </div>
                        </div>
                        <!-- Single Product Thumb End -->
                    </div>
                    <!-- Product Details Image End -->


                </div>
                <div class="col-lg-7 col-custom">

                    <!-- Product Summery Start -->
                    <div class="product-summery position-relative">

                        <!-- Product Head Start -->
                        <div class="product-head mb-3">
                            <h2 class="product-title">{{ product.name }}</h2>
                        </div>

                            <h6 class="product-title">{{ product.brand }} / {{ product.brand.region }}</h6>


                        <!-- Product Head End -->

                        <!-- Price Box Start -->
                        <div class="price-box mb-2">
                            <span class="regular-price">Prix : {{ (product.price /100) | number_format(2, ',', '.') }} €</span>
                        </div>
                        <div class="price-box mb-2">
                            <h6>Prix au kg : {{ (product.pricepkilo /100) | number_format(2, ',', '.') }} €</h6>
                        </div>
                        <div class="price-box mb-2">
                            <h6>Poids : {{ product.weight }} g</h6>
                        </div>
                        <!-- Price Box End -->

                        <!-- Description Start -->
                        <p class="desc-content mb-5">{{ product.description }}</p>
                        <!-- Description End -->


                        <!-- Cart  Button Start -->
                        {%  if product.quantity > 0 %}
                        <div class="cart-wishlist-btn pb-4 mb-n3">
                            <div class="add-to_cart mb-3">
                                <a class="btn btn-outline-dark btn-hover-primary" href="{{ path('add_to_cart', {'id' : product.id}) }}">Ajouter au panier</a>
                            </div>
                        </div>
                        {% endif %}

                        {%  if product.quantity == 0 %}
                            <div class="cart-wishlist-btn pb-4 mb-n3">
                                <div class="add-to_cart mb-3">
                                    <a class="btn btn-outline-dark">Bientôt disponible</a>
                                </div>
                            </div>
                        {% endif %}
                        <!-- Cart Button End -->


                        <!-- Social Shear Start -->
                        <div class="social-share">
                            <span>Partager :</span>
                            <a href="https://www.facebook.com/" target="_blank"><i class="fa fa-facebook-square facebook-color"></i></a>
                            <a href="https://twitter.com/?lang=fr" target="_blank"><i class="fa fa-twitter-square twitter-color"></i></a>
                            <a href="https://www.pinterest.fr/" target="_blank"><i class="fa fa-pinterest-square pinterest-color"></i></a>
                        </div>
                        <!-- Social Shear End -->
                    </div>
                    <!-- Product Summery End -->
                </div>
            </div>

            <div class="row section-margin">

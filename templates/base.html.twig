<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="Epicerie fine française">
        <title>{% block title %}La cave aux Délices - Epicerie fine{% endblock %}</title>
        <link rel="shortcut icon" href="{{asset('assets/images/favicon.ico') }}">


        {% block stylesheets %}

            <!-- Vendor CSS (Icon Font) -->

            <link rel="stylesheet" href="{{asset('assets/css/vendor/fontawesome.min.css') }}">
            <link rel="stylesheet" href="{{asset('assets/css/vendor/pe-icon-7-stroke.min.css') }}">

            <!-- Plugins CSS (All Plugins Files) -->

            <link rel="stylesheet" href="{{asset('assets/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{asset('assets/css/style.css') }}">

            <link rel="stylesheet" href="{{asset('assets/css/plugins/swiper-bundle.min.css') }}">
            <link rel="stylesheet" href="{{asset('assets/css/plugins/animate.min.css') }}">
            <link rel="stylesheet" href="{{asset('assets/css/plugins/aos.min.css') }}">
            <link rel="stylesheet" href="{{asset('assets/css/plugins/nice-select.min.css') }}">
            <link rel="stylesheet" href="{{asset('assets/css/plugins/jquery-ui.min.css') }}">
            <link rel="stylesheet" href="{{asset('assets/css/plugins/lightgallery.min.css') }}">


            <link rel="stylesheet" href="{{asset('assets/css/vendor.min.css') }}">
            <link rel="stylesheet" href="{{asset('assets/css/plugins.min.css') }}">
{#            <link rel="stylesheet" href="{{asset('assets/css/style.min.css') }}">#}
        {% endblock %}

        {% block javascript %}
        {% endblock %}


    </head>
    <body>
    <div class="header section">

        <!-- Header Bottom Start -->
        <div class="header-bottom">
            <div class="header-sticky">
                <div class="container">
                    <div class="row align-items-center">

                        <!-- Header Logo Start -->
                        <div class="col-xl-2 col-6">
                            <div class="header-logo">
                                <a href="/"><img src="{{asset('assets/images/logo/Logo-delices.svg') }}" alt="Logo La cave aux délices - épicerie fine" /></a>
                            </div>
                        </div>
                        <!-- Header Logo End -->

                        <!-- Header Menu Start -->
                        <div class="col-xl-8 d-none d-xl-block">
                            <div class="main-menu position-relative">
                                <ul>
                                    <li class="has-children">
                                        <a href="/"><span>Accueil</span></a>
                                    </li>
                                    <li class="has-children position-static">
                                        <a href="{{ path('products') }}"><span>Epicerie</span> <i class="fa fa-angle-down"></i></a>
                                        <ul class="sub-menu">
                                            <li class="col">
                                                <ul class="mb-n2">
                                                    <li><a href="{{ path('products') }}">Tous nos Produits</a></li>
                                                    <li><a href="{{ path('categories') }}">Catégories</a></li>
                                                    {% for subcategory in subcategoryNavbar() %}
                                                        <li><a href="{{ path('subcategory', {'slug' : subcategory.slug}) }}">{{ subcategory.name }}</a></li>
                                                    {% endfor %}
                                                </ul>
                                            </li>
                                        </ul>
                                    </li>
                                    <li class="has-children">
                                        <a href="{{ path('regions') }}"><span>Régions</span> <i class="fa fa-angle-down"></i></a>
                                        <ul class="sub-menu">
                                            <li><a href="{{ path('regions') }}">Tous les Régions</a></li>
                                            {% for region in regionNavbar() %}
                                                <li><a href="{{ path('region', {'slug' : region.slug}) }}">{{ region.name }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                    <li class="has-children">
                                        <a href="{{ path('articles') }}"><span>Conseils</span></a>
                                    </li>
                                    <li><a href="{{ path('contact') }}"> <span>Contact</span></a></li>
                                </ul>
                            </div>
                        </div>
                        <!-- Header Menu End -->



                        <!-- Header Action Start -->
                        <div class="col-xl-2 col-6">
                            <div class="header-actions">

                                <!-- Search Header Action Button Start -->
{#                                <a href="javascript:void(0)" class="header-action-btn header-action-btn-search"><i class="pe-7s-search"></i></a>#}
                                <!-- Search Header Action Button End -->

                                <!-- User Account Header Action Button Start -->
                                {% if app.user %}
                                    <a href="{{ path('account') }}" class="header-action-btn d-none d-md-block"><i class="pe-7s-user"></i></a>
                                    <a href="{{ path('app_logout') }}" class="header-action-btn d-none d-md-block"><i class="pe-7s-close-circle"></i></a>
                                {% else %}
                                    <a href="{{ path('app_login') }}" class="header-action-btn d-none d-md-block"><i class="pe-7s-user"></i></a>
                                    <a href="{{ path('register') }}" class="header-action-btn d-none d-md-block"><i class="pe-7s-add-user"></i></a>
                                {% endif %}

                                <!-- User Account Header Action Button End -->

                                <!-- Shopping Cart Header Action Button Start -->
                                <a href="{{ path('cart') }}" class="header-action-btn header-action-btn-cart">
                                    <i class="pe-7s-cart"></i>
                                    {% set quantity = 0 %}
                                    {% for cart in cartLength() %}
                                        {% set quantity = quantity + cart|length %}
                                    {% endfor %}

                                    <span class="header-action-num">{{ quantity }}</span>
                                </a>
                                <!-- Shopping Cart Header Action Button End -->

                                <!-- Mobile Menu Hambarger Action Button Start -->
                                <a href="javascript:void(0)" class="header-action-btn header-action-btn-menu d-xl-none d-lg-block">
                                    <i class="fa fa-bars"></i>
                                </a>
                                <!-- Mobile Menu Hambarger Action Button End -->

                            </div>
                        </div>
                        <!-- Header Action End -->

                    </div>
                </div>
            </div>
        </div>
        <!-- Header Bottom End -->

        <!--------------//-------------- Mobile Menu Start --------------//-------------->
        <div class="mobile-menu-wrapper">
            <div class="offcanvas-overlay"></div>

            <!-- Mobile Menu Inner Start -->
            <div class="mobile-menu-inner">

                <!-- Button Close Start -->
                <div class="offcanvas-btn-close">
                    <i class="pe-7s-close"></i>
                </div>
                <!-- Button Close End -->

                <!-- Mobile Menu Start -->
                <div class="mobile-navigation">
                    <nav>
                        <ul class="mobile-menu">
                            <li class="has-children">
                                <a href="#">Accueil <i class="fa fa-angle-down"></i></a>
                                <ul class="dropdown">
                                    <li><a href="/">Accueil</a></li>
                                    <li><a href="#best">Nos coups de coeur</a></li>
                                    <li><a href="#about">Apropos de nous</a></li>
                                </ul>
                            </li>
                            <li class="has-children">
                                <a href="#">Epicerie <i class="fa fa-angle-down" aria-hidden="true"></i></a>
                                <ul class="dropdown">
                                    <li><a href="{{ path('products') }}">Tous nos Produits</a></li>
                                    <li><a href="{{ path('categories') }}">Catégories</a></li>
                                    {% for subcategory in subcategoryNavbar() %}
                                        <li><a href="{{ path('subcategory', {'slug' : subcategory.slug}) }}">{{ subcategory.name }}</a></li>
                                    {% endfor %}
                                </ul>
                            </li>
                            <li class="has-children">
                                <a href="#">Régions <i class="fa fa-angle-down" aria-hidden="true"></i></a>
                                <ul class="dropdown">
                                    <li><a href="{{ path('regions') }}">Tous les Régions</a></li>
                                    {% for region in regionNavbar() %}
                                        <li><a href="{{ path('region', {'slug' : region.slug}) }}">{{ region.name }}</a></li>
                                    {% endfor %}
                                </ul>
                            </li>
                            <li class="has-children">
                                <a href="{{ path('articles') }}">Conseils</a>
                            </li>
                            <li><a href="{{ path('contact') }}">Contact</a></li>
                        </ul>
                    </nav>
                </div>
                <!-- Mobile Menu End -->

                <!-- Contact Links/Social Links Start -->
                <div class="mt-auto">

                    <!-- Contact Links Start -->
                    <ul class="contact-links">
                        <li><i class="fa fa-phone"></i><a href="#"> 336 00 00 12 03</a></li>
                        <li><i class="fa fa-envelope-o"></i><a href="contact@lacaveauxdelices.com"> contact@lacaveauxdelices.com</a></li>
                    </ul>
                    <!-- Contact Links End -->

                    <!-- Social Widget Start -->
                    <div class="widget-social">
                        <a title="Facebook" href="https://www.facebook.com/" target="_blank"><i class="fa fa-facebook-square facebook-color"></i></a>

                        <a title="Twitter" href="https://twitter.com/?lang=fr" target="_blank"><i class="fa fa-twitter-square twitter-color"></i></a>
                        <a title="Pinterest" href="https://www.pinterest.fr/" target="_blank"><i class="fa fa-pinterest-square pinterest-color"></i></a>
                    </div>
                    <!-- Social Widget End -->
                </div>
                <!-- Contact Links/Social Links End -->
            </div>
            <!-- Mobile Menu Inner End -->
        </div>
        <!-------------//------------- Mobile Menu End -------------//--------------->

    </div>


    {% block content %}{% endblock %}


    <!--------------------------- Footer Section Start ---------------------------------------->
    <footer class="section footer-section">
        <!-- Footer Top Start -->
        <div class="footer-top section-padding mt-10">
            <div class="container">
                <div class="row mb-n10">
                    <div class="col-12 col-sm-6 col-lg-4 col-xl-4 mb-10" data-aos="fade-up" data-aos-delay="200">
                        <div class="single-footer-widget">
                            <h2 class="widget-title">Service Clients</h2>
                            <p class="desc-content">
                                Besoin d'une suggetion ou d'en savoir plus sur un produit ? N'hesitez pas a nous contacter
                                </p>
                            <!-- Contact Address Start -->
                            <ul class="widget-address">
                                <li><span>Téléphone : </span> <a href="#"> +336 00 00 12 03</a></li>
                                <li><span>Email : </span> <a href="contact@lacaveauxdelices.com"> contact@lacaveauxdelices.com</a></li>
                            </ul>
                            <!-- Contact Address End -->

                            <!-- Soclial Link Start -->
                            <div class="widget-social justify-content-start mt-4">
                                <a href="https://www.facebook.com/" target="_blank"><i class="fa fa-facebook-square facebook-color"></i></a>
                                <a href="https://twitter.com/?lang=fr" target="_blank"><i class="fa fa-twitter-square twitter-color"></i></a>
                                <a href="https://www.pinterest.fr/" target="_blank"><i class="fa fa-pinterest-square pinterest-color"></i></a>
                            </div>
                            <!-- Social Link End -->
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-2 col-xl-2 mb-10" data-aos="fade-up" data-aos-delay="300">
                        <div class="single-footer-widget">
                            <h2 class="widget-title">Information</h2>
                            <ul class="widget-list">
                                <li><a href="/">Qui sommes-nous</a></li>
                                <li><a href="#">Paiement et Livraison</a></li>
                                <li><a href="/cgv">Conditions générales de vente</a></li>
                                <li><a href="#">Mentions légales</a></li>
                                <li><a href="#">Utilisation des cookies</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-2 col-xl-2 mb-10" data-aos="fade-up" data-aos-delay="400">
                        <div class="single-footer-widget aos-init aos-animate">
                            <h2 class="widget-title">Mon Espace</h2>
                            <ul class="widget-list">
                                <li><a href="{{ path('account') }}">Mon Compte</a></li>
                                <li><a href="{{ path('cart') }}">Mes commandes</a></li>
                                <li><a href="{{ path('account_address') }}">Mes adresses</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-4 col-xl-4 mb-10" data-aos="fade-up" data-aos-delay="500">
                        <div class="single-footer-widget">
                            <h2 class="widget-title">La Newsletter</h2>
                            <div class="widget-body">
                                <p class="desc-content mb-0">
                                    Nouveautés, recettes et conseils exclusifs de l'équipe n'attendent que vous.
                                </p>

                                <!-- Newsletter Form Start -->
                                <div class="newsletter-form-wrap pt-4">
                                    <form id="mc-form" class="mc-form">
                                        <input type="email" id="mc-email" class="form-control email-box mb-4" placeholder="Votre adresse email" name="EMAIL">
                                        <button id="mc-submit" class="newsletter-btn btn btn-primary btn-hover-dark" type="submit">S'abonner</button>
                                        <div class="mt-3 form-check">
                                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                            <label class="form-check-label" for="exampleCheck1">J'accepte la politique de confidentialité de la Cave aux Délices</label>
                                        </div>



                                    </form>
                                    <!-- mailchimp-alerts Start -->
                                    <div class="mailchimp-alerts text-centre">
                                        <div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
                                        <div class="mailchimp-success text-success"></div><!-- mailchimp-success end -->
                                        <div class="mailchimp-error text-danger"></div><!-- mailchimp-error end -->
                                    </div>
                                    <!-- mailchimp-alerts end -->
                                </div>
                                <!-- Newsletter Form End -->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer Top End -->

        <!-- Footer Bottom Start -->
        <div class="footer-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12 text-center">
                        <div class="copyright-content">
                            <p class="mb-0">Copyright Irishka© 2021</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer Bottom End -->
    </footer>
    <!-- Footer Section End -->





